{
  "name": "c0d3ster",
  "author": "c0d3ster (https://github.com/c0d3ster)",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev:spotlight": "npx @spotlightjs/spotlight",
    "dev:next": "next dev --turbopack",
    "dev": "npm run dev:next",
    "build:next": "next build",
    "build": "if [ \"$VERCEL_ENV\" != \"preview\" ]; then npm run db:migrate; fi && npm run build:next",
    "build:ci": "npm run build:next",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next out coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check:types": "tsc --noEmit --pretty",
    "check:deps": "knip",
    "commit": "commit",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen --watch"
  },
  "dependencies": {
    "@apollo/client": "^4.0.0",
    "@apollo/server": "^5.0.0",
    "@arcjet/next": "^1.0.0-beta.9",
    "@clerk/localizations": "^3.20.6",
    "@clerk/nextjs": "^6.31.1",
    "@graphql-tools/merge": "^9.1.1",
    "@graphql-tools/schema": "^10.0.25",
    "@hookform/resolvers": "^5.2.1",
    "@logtape/logtape": "^1.0.4",
    "@react-email/render": "^1.2.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-query-devtools": "^5.85.5",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "next": "^15.4.5",
    "pg": "^8.16.3",
    "posthog-js": "^1.258.5",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "react-toastify": "^11.0.5",
    "resend": "^6.0.1",
    "svix": "^1.73.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@chromatic-com/playwright": "^0.12.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/prompt-cli": "^19.8.1",
    "@eslint-react/eslint-plugin": "^1.52.3",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@graphql-codegen/typescript-react-apollo": "^4.3.3",
    "@next/bundle-analyzer": "^15.4.5",
    "@next/eslint-plugin-next": "^15.4.5",
    "@playwright/test": "^1.54.2",
    "@spotlightjs/spotlight": "^3.0.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.2.0",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.9",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
    "jsdom": "^26.1.0",
    "knip": "^5.62.0",
    "lefthook": "^1.12.2",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.7",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.1"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
